build: [
  ["./configure" "-ignore-coq-version" "x86_32-linux" "-bindir" "%{bin}%" "-libdir" "%{lib}%/compcert"]
  [make "-j%{jobs}%"]
]
install: [
  [make "install"]
]
remove: [
  ["rm" "%{bin}%/ccomp"]
  ["rm" "%{bin}%/clightgen"]
  ["rm" "-R" "%{lib}%/compcert"]
  ["rm" "%{share}%/compcert.ini"]
]
depends: [
  "coq" {= "8.7.dev"}
  "menhir" {>= "20180530"}
]
