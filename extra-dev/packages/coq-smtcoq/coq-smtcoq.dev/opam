  "Chantal Keller"
]
build: [
  ["sh" "-c" "cd src && ./configure.sh"]
# ["sh" "-c" "cd src && make -j%{jobs}%"]
  ["sh" "-c" "cd src && make -j1"]
  ["sh" "-c" "cd src && make install"]
]
remove: ["rm" "-R" "%{lib}%/coq/user-contrib/SMTCoq"]
depends: [
  "ocaml"
  "coq" {>= "8.5" & < "8.6~"}
]
synopsis:
  "A tool to check proof witnesses coming from external SAT and SMT solvers and to call SAT and SMT solvers from Coq."
flags: light-uninstall
url {
  src: "git+https://github.com/smtcoq/smtcoq"
}
