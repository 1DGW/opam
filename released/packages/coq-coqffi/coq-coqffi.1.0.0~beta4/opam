  "ocaml" {>= "4.08" & < "4.12~" }
  "dune" {>= "2.5"}
  "coq" {(>= "8.12" & < "8.13~") | (= "dev")}
  "cmdliner" {>= "1.0.4"}
  "sexplib" {>= "0.14"}
]

