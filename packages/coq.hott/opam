opam-version: "1.1"
build: [
  [ "./configure" 
    "-configdir" "%{lib}%/coq/config"
    "-mandir" "%{man}%"
    "-docdir" "%{doc}%"
    "-prefix" "%{prefix}%"
    "-usecamlp5"
    "-camlp5dir" "%{lib}%/camlp5"
    "-coqide" "no"
  ]
  [make "-j%{jobs}%"]
  [make "install"]
]
patches: ["makeinstall.patch"]
depends: [
  "camlp5"
]
